<%= provide(:title, "Create New Category") %>

<div class="mid-text padding-vertical border-bottom center">
  Create new category
</div>

<div class="form-container padding-vertical">
  <%= form_for(@category, url: categories_path) do |f| %>
    <%= render 'partials/errors/category_errors' %>
    <div class="field">
      <%= f.text_field :title, placeholder: "Title", class: "text-field" %>
    </div>
    <div class="field">
      <%= f.text_field :image, placeholder: "Image", class: "text-field" %>
    </div>
    <div class="field">
      <%= f.text_area :description, placeholder: "Description", class: "text-area" %>
    </div>
    <div class="actions">
      <%= f.submit "Create category", class: "submit-button" %>
    </div>
  <% end %>
</div>