<%= provide(:title, sanitize(@category.title)) %>

<div class="wrapper">
  <div class="container">
    <div class="mid-container padding-top">

      <div class="padding-bottom mid-text border-bottom">

        <%= @category.title %>

        <span class="hard-text"> | 18 Courses</span>
      </div>

      <div class="padding-vertical border-bottom">

        <img srcset="<%= @category.image %>" width="100%" height="auto">

        <div class="padding-top">
          <%= @category.description %>
        </div>
      </div>

    </div>


    <div class="body-container padding-vertical">
      <div class="flex">

        <div class="sidebar">
          <ul>
            <% @category.subcategories.each do |subcategory| %>
              <li><%= link_to subcategory.title, category_subcategory_path(@category, subcategory) %></li>
            <% end %>
          </ul>
        </div>

        <div class="content">
          <%= @category.description %>
        </div>

      </div>
    </div>

  </div>
</div>