<%= provide(:title, "Create New Subcategory for" + sanitize(@category.title)) %>

<div class="text padding-vertical border-bottom center">
  Create new subcategory
</div>

<div class="form-container padding-vertical">
  <%= form_for(@subcategory, url: category_subcategories_path) do |f| %>
    <%= render 'partials/errors/subcategory_errors' %>
    <div class="field">
      <%= f.text_field :title, placeholder: "Title", class: "text-field" %>
    </div>
    <div class="field">
      <%= f.text_field :image, placeholder: "Image", class: "text-field" %>
    </div>
    <div class="field">
      <%= f.text_area :description, placeholder: "Description", class: "text-area" %>
    </div>
    <div class="actions">
      <%= f.submit "Create subcategory", class: "submit-button" %>
    </div>
  <% end %>
</div>