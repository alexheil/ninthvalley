<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">

      <div class="padding-bottom center mid-text border-bottom">
        Checkout
      </div>

       <div class="padding-top">
        <%= form_for(@purchase, url: charge_instructor_course_purchase_path(@instructor, @course, @purchase), :html => {:id => "payment-form"}) do |f| %>
          <span class="payment-errors"></span>

          <div class="field">
            <label for="card-element">
              Credit or debit card
            </label>
            <div id="card-element">
              <!-- A Stripe Element will be inserted here. -->
            </div>
          </div>

          <!-- Used to display form errors. -->
          <div id="card-errors" role="alert"></div>

          <div class="padding-bottom border-bottom">
            <button type="submit" class="submit-button">Add source</button>
          </div>
        <% end %>

        <div class="padding-top">
          This is a one-time payment. None of the information above is saved in Ninth Valley's database. Ninth Valley will not have access to this information after this moment via this website.
        </div>

      </div>


    </div>
  </div>
</div>

<%= render 'partials/stripe' %>