<footer class="full-footer-container wrapper dark-background">
  <div class="container">

    <div class="flex mid-container">

      <div class="four-column">
        <div class="home-footer">
          <ul>
            <li><%= link_to "Terms", terms_path, class: "nav-links" %></li>
            <li><%= link_to "Privacy", privacy_path, class: "nav-links" %></li>
          </ul>
        </div>
      </div>

      <div class="four-column">
        <div class="home-footer">
          <ul>
            <li><%= link_to "Blog", blog_posts_path, class: "nav-links" %></li>
            <li><%= link_to "Updates", updates_path, class: "nav-links" %></li>
            <li><%= link_to "FAQ", faq_path, class: "nav-links" %></li>
            <li><%= link_to "About", about_path, class: "nav-links" %></li>
            <li><%= link_to "Categories", categories_path, class: "nav-links" %></li>
          </ul>
        </div>
      </div>

      <div class="four-column">
        <div class="home-footer">
          <ul>
            <li><%= link_to "Facebook", "https://facebook.com/ninthvalley", :target => "_blank", class: "facebook" %></li>
            <li><%= link_to "Twitter", "https://twitter.com/ninthvalley", :target => "_blank", class: "twitter" %></li>
            <li><%= link_to "YouTube", "https://www.youtube.com/channel/UCZaUpn3Lk-3Df1ixPNaVlfA", :target => "_blank", class: "youtube" %></li>
            <li><%= link_to "Instagram", "https://instagram.com/ninthvalley", :target => "_blank", class: "instagram" %></li>
          </ul>
        </div>
      </div>

      <div class="four-column">
        <div class="home-footer">
          <ul>
            <% if instructor_signed_in? %>
              <li><%= link_to "Your page", instructor_path(current_instructor), class: "nav-links" %></li>
            <% elsif student_signed_in? %>
              <li><%= link_to "Your page", student_path(current_student), class: "nav-links" %></li>
            <% else %>
              <li><%= link_to "Sign in", sign_in_path, class: "nav-links" %></li>
              <li><%= link_to "Register", register_path, class: "nav-links" %></li>
            <% end %>
          </ul>
        </div>
      </div>

    </div>


    <div class="home-footer-disclaimer padding-top">
      Built in Buffalo, New York, United States of America, Earth.
    </div>
    <div class="home-footer-disclaimer padding-bottom">
      There are <%= pluralize(Student.count, "student") %> watching <%= pluralize(Video.count, "video") %> in <%= pluralize(Course.count, "course") %> or reading <%= pluralize(Post.count, "post") %> created by <%= pluralize(Instructor.count, "instructors") %> on Ninth Valley right now.
    </div>
  </div>
</footer>