<%= provide(:title, "Set Up A Merchant Account" + " | " + "Halowake") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">

      <div class="padding-bottom center mid-text border-bottom">
        Settings
      </div>

      <div class="padding-top">
        <%= form_for(@merchant, url: instructor_merchant_path) do |f| %>
          <%= f.hidden_field :instructor_id %>
          <%= render 'partials/errors/payment_setting_errors' %>
          
          <div class="flex">
            <div class="field-two-column">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "text-field" %>
            </div>
            <div class="field-two-column">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "text-field" %>
            </div>
          </div>
          <div class="flex">
            <div class="field-three-column">
              <%= f.label :month %> <span class="dark mini-text">(MM)</span>
              <%= f.text_field :month, class: "text-field" %>
            </div>
            <div class="field-three-column">
              <%= f.label :day %> <span class="dark mini-text">(DD)</span>
              <%= f.text_field :day, class: "text-field" %>
            </div>
            <div class="field-three-column">
              <%= f.label :year %> <span class="dark mini-text">(YYYY)</span>
              <%= f.text_field :year, class: "text-field" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :country %>
            <%= f.select :country, options_for_select(country_select) %>
          </div>

          <div class="padding-bottom center dark">
            Don't forget that Stripe, our secure payment processor, takes a fee of <i>3% plus 0.30 USD</i> from <i>each transaction</i>. By registering your account, you agree to our <%= link_to 'Terms of Use', terms_path  %> and the <a href="https://stripe.com/connect/account-terms">Stripe Connected Account Agreement</a>.
          </div>

          <div class="border-bottom padding-bottom">
            <%= f.submit "Create merchant account", data: { disable_with: 'Creating...' }, class: "submit-button" %>
          </div>
        <% end %>
      </div>


    </div>
  </div>
</div>