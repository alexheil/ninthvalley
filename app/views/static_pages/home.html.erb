<div class="center home-text padding-bottom-large">
  <div class="container">
    <%= form_tag(search_path, :method => "get") do %>
      <div class="home-column">
        <div class="flex">
          <%= text_field_tag :search, params[:search], placeholder: "I want to learn about...", class: "home-search-field" %>
          <%= submit_tag "search", class: "home-search-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="wrapper home-container">
  <div class="container">
    <div class="home-mid-container padding-vertical">

      <% unless student_signed_in? || instructor_signed_in? %>

        <div class="padding-bottom center mid-text border-bottom">
          Register as...
        </div>
        
        <div class="flex">
          <div class="two-column center padding-top">
            <%= link_to "Student", new_student_registration_path, class: "home-sign-up" %>
          </div>
          <div class="two-column center padding-vertical">
            <%= link_to "Instructor", new_instructor_registration_path, class: "home-sign-up" %>
          </div>
        </div>

        <div class="padding-vertical center mid-text border-top border-bottom">
          Why join Ninth Valley?
        </div>
        
        <div class="flex">
          <div class="two-column center">
            <div class="bold padding-top">
              As a student...
            </div>
            <div class="padding-top">
              Here is a reason
            </div>
            <div class="padding-top">
              And another reason
            </div>
            <div class="padding-top">
              And a third reason
            </div>
          </div>
          <div class="two-column center">
            <div class="bold padding-top">
              As an instructor...
            </div>
            <div class="padding-top">
              Here is a reason
            </div>
            <div class="padding-top">
              And another reason
            </div>
            <div class="padding-vertical">
              And a third reason
            </div>
          </div>
        </div>

      <% end %>

      <div class="padding-vertical center mid-text border-top border-bottom">
        Learn something new...
      </div>

      <div class="flex padding-top">
        <% @popular_courses.each do |course| %>
          <div class="four-column-course border margin-bottom">
            <%= link_to(instructor_course_path(course.instructor, course)) do %>
              <img class="thumbnail-image-feed-five" src="<%= course.image_url(:thumb) %>">
            <% end %>
            <div class="padding-horizontal">
              <div class="padding-vertical-mini border-bottom">
                <%= link_to truncate(course.title,length: 50), instructor_course_path(course.instructor, course) %>
              </div>
            </div>
            <div class="padding-horizontal">
              <div class="padding-vertical-mini border-bottom mini-text">
                <div class="flex">
                  <div class="two-column-course">
                    <%= link_to course.instructor.username, instructor_path(course.instructor) unless course.instructor.profile.first_name.present? || course.instructor.profile.last_name.present? %> 
                    <%= link_to(instructor_path(course.instructor)) do %>
                      <%= course.instructor.profile.first_name if course.instructor.profile.first_name.present? %> <%= course.instructor.profile.last_name if course.instructor.profile.last_name.present? %>
                    <% end %>
                  </div>
                  <div class="two-column-course right bold">
                    <% if student_signed_in? && current_student.purchased?(course) %>
                      Owned
                    <% elsif course.paid? %>
                      <%= course.price %> <%= course.currency %>
                    <% else %>
                      Free!
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <div class="padding-horizontal">
              <div class="padding-vertical-mini border-bottom mini-text">
                <% if course.reviews.any? %>
                  <span class="review-container">
                    <ul>
                      <% if course.average_rating == 5 %>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                      <% elsif course.average_rating == 4 %>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                      <% elsif course.average_rating == 3 %>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                      <% elsif course.average_rating == 2 %>
                        <li class="star-five"></li>
                        <li class="star-five"></li>
                      <% elsif course.average_rating == 1 %>
                        <li class="star-five"></li>
                      <% end %><%= " - (" + course.reviews.count.to_s + ")" %>
                    </ul>
                  </span>
                <% else %>
                  No reviews yet.
                <% end %>
              </div>
            </div>

            <div class="padding-vertical-mini padding-horizontal mini-text">
              <%= truncate(course.tagline, length: 140) %>
            </div>
          </div>
        <% end %>
      </div>



      <div class="padding-vertical center mid-text border-top border-bottom">
        Discover
      </div>

      <div class="flex padding-top">
        <% @categories.each do |category| %>
          <div class="four-column-course border margin-bottom">
            <div class="home-image-container link-color">
              <%= link_to(category_path(category)) do %>
                <img class="thumbnail-image-home" src="<%= category.image %>">
                <div class="home-image-centered mid-text">
                  <%= category.title.upcase %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>



    </div>
  </div>
</div>