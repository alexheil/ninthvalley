<%= provide(:title, "Register") %>


<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">


      <div class="padding-bottom center mid-text">
        Register as...
      </div>

      <div class="flex padding-vertical border-top border-bottom">
        <div id="student-register-click-page" class="two-column center active-tab">
          Student
        </div>
        <div id="instructor-register-click-page" class="two-column center inactive-tab">
          Instructor
        </div>
      </div>

      <div id="student-register-container-page" class="padding-top">
        <%= form_for(resource_student, as: resource_name_student, url: registration_path(resource_name_student)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :username %>
            <%= f.text_field :username, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :password %> <span class="dark mini-text"><%= @minimum_password_length.to_s + " characters minimum." if @minimum_password_length %></span>
            <%= f.password_field :password, autocomplete: "off", class: "text-field" %>
          </div>

          <div class="border-bottom padding-bottom">
            <%= f.submit "Register", class: "submit-button" %>
          </div>
        <% end %>
      </div>


      <div id="instructor-register-container-page" class="padding-top">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :username %>
            <%= f.text_field :username, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :password %> <span class="dark mini-text"><%= @minimum_password_length.to_s + " characters minimum." if @minimum_password_length %></span>
            <%= f.password_field :password, autocomplete: "off", class: "text-field" %>
          </div>

          <div class="border-bottom padding-bottom">
            <%= f.submit "Register", class: "submit-button" %>
          </div>
        <% end %>
      </div>

      <div class="padding-vertical border-bottom">
        <%= link_to "But I already have an account.", sign_in_path %>
      </div>

      <div id="why-student-page" class="padding-vertical">
        <div class="padding-bottom center mid-text border-bottom">
          Why be a student?
        </div>
        <div class="padding-top">
          This is why, dude.
        </div>
        <div class="padding-top">
          Because it's gonna be sweet!
        </div>
        <div class="padding-top">
          And some other things.
        </div>
      </div>

      <div id="why-instructor-page" class="padding-vertical">
        <div class="padding-bottom center mid-text border-bottom">
          Why be an instructor?
        </div>
        <div class="padding-top">
          You get to teach people stuff!
        </div>
        <div class="padding-top">
          And make money from it!
        </div>
        <div class="padding-top">
          And other reasons!
        </div>
      </div>


    </div>
  </div>
</div>