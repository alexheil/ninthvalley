<%= provide(:title, "Forgot Your Password?") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">

      <div class="padding-bottom center mid-text border-bottom">
        Forgot your password
      </div>

      <div class="padding-top">
        <%= form_for(resource_student, as: resource_name_student, url: password_path(resource_name_student), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email", class: "text-field" %>
          </div>

          <div class="border-bottom padding-bottom">
            <%= f.submit "Reset my password", class: "submit-button" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
